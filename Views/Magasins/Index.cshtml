@model IEnumerable<GestionDesProduits.Models.Magasin>

@{
ViewData["Title"] = "Stores Management";
}


<div class="container">
    <!-- Button for creating a new store -->
    <div class="text-end mb-3">
        <a class="btn btn-success" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Create New Store
        </a>
    </div>

    <!-- Table for displaying stores -->
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead >
            <tr>
                <th>Store Name</th>
                <th>City</th>
                <th class="text-center">Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.NomMagasin)</td>
                <td>@Html.DisplayFor(modelItem => item.ville)</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1">
                        <i class="bi bi-eye"></i> Details
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
            }
            </tbody>
        </table>
    </div>
</div>

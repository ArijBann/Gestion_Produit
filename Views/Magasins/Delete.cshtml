@model GestionDesProduits.Models.Magasin

@{
ViewData["Title"] = "Delete Store";
}

<div class="container d-flex justify-content-center mt-4">
    <div class="card shadow-sm" style="max-width: 600px; width: 100%;">
        <div class="card-body">
            <h4 class="card-title text-center text-danger mb-4">
                <i class="bi bi-exclamation-triangle-fill"></i> Confirm Deletion
            </h4>
            <p class="text-center">
                Are you sure you want to delete this store? This action cannot be undone.
            </p>
            <hr />
            <dl class="row">
                <!-- Store Name -->
                <dt class="col-sm-4 fw-bold">Store Name:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.NomMagasin)</dd>

                <!-- City -->
                <dt class="col-sm-4 fw-bold">City:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ville)</dd>
            </dl>
        </div>

        <!-- Form and Action Buttons -->
        <div class="card-footer text-center">
            <form asp-action="Delete" style="display: inline;">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger me-2">
                    <i class="bi bi-trash-fill"></i> Delete
                </button>
            </form>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

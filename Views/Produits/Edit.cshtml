@model GestionDesProduits.Models.Produits

@{
ViewData["Title"] = "Edit";
}

<div class="container mt-4">
    <!-- Card Layout for Editing Product -->
    <div class="card shadow-sm">
        <div class="card-body">
            <h3>Edit Product</h3>

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Hidden ID Field -->
                <input type="hidden" asp-for="Id" />

                <!-- Image URL Field -->
                <div class="form-group">
                    <label asp-for="ImageUrl" class="control-label">Image URL</label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Enter Image URL" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <!-- Product Name -->
                <div class="form-group">
                    <label asp-for="NomProduit" class="control-label">Product Name</label>
                    <input asp-for="NomProduit" class="form-control" placeholder="Enter Product Name" />
                    <span asp-validation-for="NomProduit" class="text-danger"></span>
                </div>

                <!-- Store Selection -->
                <div class="form-group">
                    <label asp-for="MagasinId" class="control-label">Store</label>
                    <select asp-for="MagasinId" class="form-control" asp-items="ViewBag.MagasinId">
                        <option value="">Select Store</option>
                    </select>
                    <span asp-validation-for="MagasinId" class="text-danger"></span>
                </div>

                <!-- Category Selection -->
                <div class="form-group">
                    <label asp-for="CategorieId" class="control-label">Category</label>
                    <select asp-for="CategorieId" class="form-control" asp-items="ViewBag.CategorieId">
                        <option value="">Select Category</option>
                    </select>
                    <span asp-validation-for="CategorieId" class="text-danger"></span>
                </div>

                <!-- Stock Description -->
                <div class="form-group">
                    <label asp-for="DescriptionStock" class="control-label">Stock Description</label>
                    <input asp-for="DescriptionStock" class="form-control" placeholder="Enter Stock Description" />
                    <span asp-validation-for="DescriptionStock" class="text-danger"></span>
                </div>

                <!-- Promo Start Date -->
                <div class="form-group">
                    <label asp-for="DateDebutPromo" class="control-label">Promo Start Date</label>
                    <input asp-for="DateDebutPromo" type="date" class="form-control" />
                    <span asp-validation-for="DateDebutPromo" class="text-danger"></span>
                </div>

                <!-- Promo End Date -->
                <div class="form-group">
                    <label asp-for="DateFinPromo" class="control-label">Promo End Date</label>
                    <input asp-for="DateFinPromo" type="date" class="form-control" />
                    <span asp-validation-for="DateFinPromo" class="text-danger"></span>
                </div>

                <!-- Promo Error Message -->
                @if(ViewBag.InvalidDate != null)
                {
                <h5 class="text-danger">@ViewBag.InvalidDate</h5>
                }

                <!-- Price Fields -->
                <div class="form-group">
                    <label asp-for="prixProduit" class="control-label">Product Price</label>
                    <input asp-for="prixProduit" type="number" step="0.01" class="form-control" placeholder="Enter Product Price" />
                    <span asp-validation-for="prixProduit" class="text-danger"></span>
                </div>

                <!-- Promo Price Fields -->
                <div class="form-group">
                    <label asp-for="prixProduitEnPromo" class="control-label">Promo Price</label>
                    <input asp-for="prixProduitEnPromo" type="number" step="0.01" class="form-control" placeholder="Enter Promo Price" />
                    <span asp-validation-for="prixProduitEnPromo" class="text-danger"></span>
                </div>

                <!-- Save Button -->
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Save</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Back to List Link -->
    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model GestionDesProduits.Models.Categorie

@{
ViewData["Title"] = "Delete Category";
}

<div class="container mt-4">
    <!-- Card Layout for Deletion Confirmation -->
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title text-center mb-4 text-danger">Confirm Deletion</h4>
            <hr />

            <!-- Category Information -->
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Category Name:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NomCategorie)</dd>
            </dl>

            <!-- Confirmation Message -->
            <p class="text-warning">This action cannot be undone. Are you sure you want to delete this category?</p>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <!-- Delete Button -->
                <form asp-action="Delete" method="post" class="d-inline-block">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </form>

                <!-- Back to List Button -->
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

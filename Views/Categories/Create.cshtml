@model GestionDesProduits.Models.Categorie

@{
ViewData["Title"] = "Create Category";
}

<div class="container mt-4">
    <!-- Card Layout for Create Form -->
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title text-center mb-4">Create New Category</h4>
            <hr />

            <!-- Category Creation Form -->
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Category Name Field -->
                <div class="form-group mb-3">
                    <label asp-for="NomCategorie" class="form-label">Category Name</label>
                    <input asp-for="NomCategorie" class="form-control" placeholder="Enter category name" />
                    <span asp-validation-for="NomCategorie" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-lg w-100">Create Category</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Back to List Button -->
    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Back to List</a>
    </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
